<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_area1"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:background="#000"
            android:layout_height="50dp"
            >

            <ImageView
                android:id="@+id/flash_btn"
                android:layout_alignParentLeft="true"
                android:src="@drawable/banana"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="image of flash" />
            <ImageView

                android:id="@+id/switch_btn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/banana"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
        </RelativeLayout>

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_below="@+id/layout_area1"
            android:layout_above="@+id/layout_area2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <RelativeLayout
            android:id="@+id/layout_area2"
            android:layout_width="match_parent"
            android:background="#000"
            android:layout_alignParentBottom="true"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/btn_exit"
                android:src="@drawable/banana"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/btn_take_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/btn_take_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/banana"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:id="@+id/btn_lib"
                android:src="@drawable/banana"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/btn_take_photo"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>